<!DOCTYPE html>
<html lang="sv">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}{{ title }}{% endblock %}</title>
        <link rel="icon" href="img/favicon.png">
        
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
        <header>
            <div class="headerBlock">
                <img src="{{ asset('img/background.jpg')}}" alt = "Bakgrund">
                
                <div class="headerData">
                    <p>Kursen mvc</p>
                    <div class="centerTitle">
                        <p>{{ title }}</p>
                    </div>
                </div>
            </div>
            
        </header>
    
        <nav>
            <ul>
                {% set route = app.request.attributes.get('_route') %}
                
                {% for i in range(0, pages|length-1, 2) %}
                    
                    {% if route is same as pages[i] %}
                    <li class="active">
                        <a href="{{ path(pages[i]) }}">
                            {{ pages[i+1] }}
                        </a>
                    </li>
                    {% else %}
                    <li>
                        <a href="{{ path(pages[i]) }}">
                            {{ pages[i+1] }}
                        </a>
                    </li>
                    {% endif %}
                    
                {% endfor %}
            </ul>
        </nav> 
        
        <main>
        {% block body %}{% endblock %}
        </main>
        
        <footer>
            <div class= "flex">
                <div class="footerBlock">
                    <h2>Nyttiga l√§nkar</h2>
                    <ul>
                        <li>
                            <a href="https://symfony.com/">Symfony</a>
                        </li>
                        <li>
                            <a href="https://getcomposer.org/">Composer</a>
                        </li>
                        <li>
                            <a href="https://www.php.net/">PHP</a>
                        </li>
                        <li>
                            <a href="https://www.javascript.com/">Javascript</a>
                        </li>
                        <li>
                            <a href="https://github.com/">GitHub</a>
                        </li>
                    </ul>
                </div>
                <div class="footerBlock">
                    <h2>Dagens citat</h2>
                    <p id="quote"></p>
                </div>
                <div class="footerBlock">
                    <h2>Dagens datum</h2>
                    <p id="date"></p>
                </div>
            </div>
        </footer>
    </body>
</html>
